<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_black"
    tools:context=".Activities.Users.User_Detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/ava_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/user_ava"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_ava" />
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@id/cardView"
                android:background="@drawable/ic_change_profile" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/ava_wrap">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/name_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Họ tên: "
                    android:textSize="20sp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/main_white"/>

                <!-- gạch dưới -->
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/main_white"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginBottom="25dp"
                    android:layout_below="@id/name_detail"/>

                <TextView
                    android:id="@+id/phone_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SĐT: "
                    android:textSize="20sp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/main_white"
                    android:layout_below="@id/line"/>

                <!-- gạch dưới -->
                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/main_white"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginBottom="25dp"
                    android:layout_below="@id/phone_detail"/>

                <TextView
                    android:id="@+id/email_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textSize="20sp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/main_white"
                    android:layout_below="@id/line2"/>

                <!-- gạch dưới -->
                <View
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/main_white"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginBottom="25dp"
                    android:layout_below="@id/email_detail"/>

                <TextView
                    android:id="@+id/pass_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mật khẩu: "
                    android:textSize="20sp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/main_white"
                    android:layout_below="@+id/line3"/>

                <!-- gạch dưới -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/main_white"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginBottom="25dp"
                    android:layout_below="@id/pass_detail"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>